---
import DefaultLayout from "../layouts/DefaultLayout.astro";
import CallToAction from "../components/CallToAction.astro";
import About from "../components/About.astro";
import { Image } from "astro:assets";
import banner from "../assets/img/banner.png";
import covers from "../assets/img/covers.png";
---

<DefaultLayout
  title="Home"
  description="Dragon Age Annual is an unofficial charity calendar featuring fanworks from talented, volunteer Dragon Age fansâ€” artists, writers, and more."
>
  <article class="container">
    <div class="space-content my-12">
      <Image
        src={banner}
        alt="Dragon Age Annual"
        class="mx-auto w-11/12 md:w-[700px]"
      />
      <div class="flex flex-row gap-10">
        <div class="space-content w-prose lg:w-3/4">
          <h2>Pre-Orders Open October 1!</h2>
          <Image
            src={covers}
            alt="Dragon Age Annual"
            class="mx-auto w-11/12 md:w-[700px]"
          />

          <ul class="list-type-none text-lg">
            <li>
              <strong class="uppercase text-nord8">Title:</strong> Legacies
            </li>
            <li>
              <strong class="uppercase text-nord8">Theme:</strong> Thedas' Myths
              & Legends
            </li>
            <li>
              <strong class="uppercase text-nord8">Charity:</strong>
              <a href="https://www.warchild.org.uk/">War Child UK</a>
            </li>
          </ul>
        </div>
        <About />
      </div>
      <CallToAction />
    </div>
  </article>
</DefaultLayout>
